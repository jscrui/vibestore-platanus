{
  "name": "vibe-store",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start:frontend": "npm run dev --workspace @vibe-store/web",
    "start:backend": "npm run start:dev --workspace @vibe-store/api",
    "start:both": "npm run start:frontend & npm run start:backend",
    "dev": "npm run dev --workspace @vibe-store/web",
    "dev:web": "npm run dev --workspace @vibe-store/web",
    "dev:api": "npm run start:dev --workspace @vibe-store/api",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "engines": {
    "node": ">=20"
  }
}